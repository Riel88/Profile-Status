<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Status">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteY="10dp">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="24dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/img_8">

            </ImageView>

            <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="125dp"
                android:layout_marginTop="10dp"
                android:text="STATUS"
                android:textAlignment="center"
                android:textAppearance="@color/black"
                android:textSize="20dp"
                android:textStyle="bold">
            </TextView>

            <ImageView
                android:layout_width="22dp"
                android:layout_height="24dp"
                android:layout_marginLeft="117dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/img_9">

            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="64dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shadow"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pp1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/img_12">

            </ImageView>

            <TextView
                android:id="@+id/sts1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Repair in Progress"
                android:textColor="@color/orange_primary"
                android:textStyle="bold">

            </TextView>

            <ImageView
                android:id="@+id/icncht"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="90dp"
                android:background="@drawable/img_13">

            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="510dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shadow"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="290dp"
                android:layout_marginTop="5dp"
                android:text="59 mins"
                android:textColor="@color/orange"
                android:textSize="10dp"
                android:textStyle="bold">

            </TextView>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:background="@drawable/img_14">

            </ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Namambl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="Kona Electric"
                        android:textColor="@color/black"
                        android:textSize="30dp"
                        android:textStyle="bold">

                    </TextView>

                    <TextView
                        android:id="@+id/mrkmbl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="Hyundai   -   2025">

                    </TextView>
                </LinearLayout>

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="44dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/img_15">

                </ImageView>
            </LinearLayout>

            <ImageView
                android:id="@+id/kategori"
                android:layout_width="65dp"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/img_16">

            </ImageView>

            <LinearLayout
                android:id="@+id/Bengkel"
                android:layout_width="300dp"
                android:layout_height="120dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/shadow"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="121dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/namabengkel"
                        android:layout_width="104dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Bintang
                        automotive"
                        android:textColor="@color/orange"
                        android:textSize="16dp"
                        android:textStyle="bold">

                    </TextView>

                    <TextView
                        android:id="@+id/almtbengkel"
                        android:layout_width="152dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Jl. Bintang No 66J,
                         Medan"
                        android:textSize="12dp">

                    </TextView>

                    <TextView
                        android:id="@+id/tgl1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="6 may 2025"
                        android:textSize="12dp">

                    </TextView>


                </LinearLayout>

                <ImageView
                    android:id="@+id/rating"
                    android:layout_width="29dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/img_17">

                </ImageView>

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/img_18">

                </ImageView>


            </LinearLayout>
        </LinearLayout>


</LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>